<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gallery" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorHighlight">@color/gray</item>
        <item name="colorPrimary">@color/gray</item>

    </style>

    <style name="Theme.Gallery" parent="Base.Theme.Gallery" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.Gallery</item>
    </style>

    <style name="MyBottomNavigationView" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
    </style>
    
    <style name="colorHighlight"  parent="ThemeOverlay.AppCompat">
        <item name="android:textColorHighlight">@color/gray</item>
    </style>

</resources>