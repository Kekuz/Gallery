<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottom_navigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationView</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemIconTint">@color/bottom_navigation_items_color</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="cancel_text_style">
        <item name="android:textSize">@dimen/button_cancel_text_size</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>

    <style name="bnt_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
    </style>

    <style name="bnt_transparent_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="bnt_sing_up_style" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="colorOutline">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/button_outline_width</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:foreground">@drawable/edit_text_background</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>