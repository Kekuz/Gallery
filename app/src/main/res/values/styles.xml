<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottom_navigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationView</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemIconTint">@color/bottom_navigation_items_color</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cancel_text_style">
        <item name="android:textSize">@dimen/button_cancel_text_size</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="title_error_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="error_text_style">
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="bnt_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/selector_button_color</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
    </style>

    <style name="bnt_transparent_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selector_button_color</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="bnt_outlined_style" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/selector_button_color</item>
        <item name="strokeWidth">@dimen/button_outline_width</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selector_button_color</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:foreground">@drawable/edit_text_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">custom</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="endIconTint">@color/gray</item>
        <item name="helperTextTextColor">@color/error_red</item>
        <item name="hintEnabled">false</item>



    </style>


    <style name="search_edit_text_style">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tab_layout_style">
        <item name="android:background">@color/transparent</item>
        <item name="tabIndicatorColor">@color/main</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/normal_plus_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>